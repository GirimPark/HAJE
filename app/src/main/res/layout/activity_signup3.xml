<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"




    tools:context=".SignupActivity3">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/ic_pass"
        android:orientation="vertical">

        <EditText
            android:id="@+id/PassName"
            android:layout_width="182dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="215dp"
            android:layout_marginLeft="25dp"


            android:layout_marginBottom="10dp"
            android:background="@drawable/ic_input_box"

            android:textSize="15sp" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">


        <EditText
            android:id="@+id/PassBirth"
            android:layout_width="81dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="140dp"
            android:layout_marginRight="30dp"
            android:inputType="number"
            android:background="@drawable/ic_input_box"

            android:textSize="15sp" />

        <EditText
            android:id="@+id/PassBirth2"
            android:layout_width="28dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:inputType="number"
            android:background="@drawable/ic_input_box"

            android:textSize="15sp" />
    </LinearLayout>

        <EditText
            android:id="@+id/PassNumber"
            android:layout_width="209dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="40dp"
            android:layout_marginTop="13dp"
            android:layout_marginBottom="5dp"
            android:background="@drawable/ic_input_box"
            android:inputType="number"
            android:textSize="15sp" />

        <EditText
            android:id="@+id/PassSecurity"
            android:layout_width="105dp"
            android:layout_height="21dp"
            android:layout_gravity="center"
            android:layout_marginLeft="55dp"
            android:layout_marginTop="40dp"
            android:layout_marginBottom="5dp"
            android:background="@drawable/ic_input_box"
            android:inputType="number"
            android:textSize="15sp" />

        <ImageButton
        android:id="@+id/btnConfirm"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="200dp"
        android:background="@drawable/ic_ok_button"/>


    </LinearLayout>

</LinearLayout>