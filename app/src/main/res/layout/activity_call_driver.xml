<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".CallDriverActivity">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:background="@drawable/select_dep_des">

            <EditText
                android:id="@+id/inputDepart"
                android:layout_width="368dp"
                android:layout_height="34dp"
                android:layout_gravity="center"
                android:textSize="15sp"
                android:layout_marginTop="260dp"
                android:background="@drawable/ic_input_box"
                android:ems="10"
                android:inputType="phone"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"/>

            <EditText
                android:id="@+id/inputDesti"
                android:layout_width="368dp"
                android:layout_height="34dp"
                android:layout_gravity="center"
                android:textSize="15sp"
                android:layout_marginTop="50dp"
                android:background="@drawable/ic_input_box"
                android:ems="10"
                android:inputType="phone"
                android:paddingLeft="10dp"
                android:paddingRight="10dp" />

            <EditText
                android:id="@+id/carText"
                android:layout_width="368dp"
                android:layout_height="34dp"
                android:layout_gravity="center"
                android:textSize="15sp"
                android:layout_marginTop="43dp"
                android:background="@drawable/ic_input_box"
                android:ems="10"
                android:inputType="phone"
                android:paddingLeft="10dp"
                android:paddingRight="10dp" />

            <EditText
                android:id="@+id/AlarmText"
                android:layout_width="368dp"
                android:layout_height="34dp"
                android:layout_gravity="center"
                android:textSize="15sp"
                android:layout_marginTop="38dp"
                android:background="@drawable/ic_input_box"
                android:ems="10"
                android:inputType="phone"
                android:paddingLeft="10dp"
                android:paddingRight="10dp" />

            <EditText
                android:id="@+id/requestText"
                android:layout_width="368dp"
                android:layout_height="34dp"
                android:layout_gravity="center"
                android:textSize="15sp"
                android:layout_marginTop="50dp"
                android:background="@drawable/ic_input_box"
                android:ems="10"
                android:inputType="phone"
                android:paddingLeft="10dp"
                android:paddingRight="10dp" />

            <ImageButton
                android:id="@+id/callDriverButton"
                android:layout_width="368dp"
                android:layout_height="34dp"
                android:layout_gravity="center"
                android:layout_marginTop="15dp"
                android:background="@drawable/ic_call_button" />
        </LinearLayout>

    </ScrollView>


</LinearLayout>