<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.LoginPage">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:statusBarColor">@color/mainPurple</item>
        <item name="android:windowBackground">@drawable/ic_bg_login</item>
    </style>

    <style name="AppTheme.SignUpPage">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:statusBarColor">@color/mainPurple</item>
        <item name="android:windowBackground">@drawable/sign_up_background</item>
    </style>

    <style name="AppTheme.SignUpPage2">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:statusBarColor">@color/mainPurple</item>
        <item name="android:windowBackground">@drawable/ic_bg_signup2</item>
    </style>

</resources>
